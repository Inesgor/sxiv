#!/bin/sh

# Key handler for sxiv, the idea is to use the mark binding built in and then make and action
# you need noextname script which is on my github, otherwise just use basename

# Saved directory
saved="$HOME/Media/Pictures/Saved"
# List your directories here, or maybe read from a file?
dirlist="~/Media/Pictures/Wallpapers\n~/Media/Pictures/Saved\n~/Media\n~/Downloads\n~/Docs"

while read file
do
        case "$1" in
	"semicolon")	# Information
		notify-send "File information‚ÑπÔ∏è " "$(mediainfo "$file")" ;;

	"d")	# Remove
		[ "$(printf "Yes\\nNo" | dmenu -i -p "Really delete $file?")" = "Yes" ] && rm "$file" && notify-send "$(noextname "$file") deleted.‚ùå" ;;

	"w")	# Wallpaper
		setbg "$file" & ;;
	"6")	# GIMP
		setsid -f gimp "$file" & notify-send "Opening on gimp...‚úèÔ∏è üñºÔ∏è" ;;

	"s")	# 'Save', usefull to save a wallpaper, meme, comic page, etc...
		[ ! -d "$saved" ] && notify-send "$saved is not a directory, cancelled." && exit
		[ "$PWD" = "$saved" ] && notify-send "You are on the SAVED DIRü§¶" && exit
		mv "$file" "$saved" && notify-send "Successfully savedüåü" "$(basename "$file")‚úÖ" &
		;;
	"2")
		notify-send " hi $PWD"	;;

	"c")	# Rename
		[ -z "$name" ] && name=$(dmenu -i -p "New name:")
		[ -z "$name" ] && exit
		[ -f "$name.$(noextname -e "$file")" ] && notify-send "There's already a file with that nameüò†" && exit
		mv "$file" "$name.${file##*.}" && notify-send "'$(noextname -b "$file")' renamedüìù to '$name'" &	;;

	"r")	# Rotations
		convert -rotate 90 "$file" "$file"	;;
	"R")
		convert -rotate -90 "$file" "$file"	;;
	"U")
		convert -rotate 180 "$file" "$file"	;;
	"4")
		convert -flop "$file" "$file" ;;

	"y")	# Clipboard, doesnt seem to work with xsel
		printf '%s' "$(basename $file)" | xclip -selection clipboard &&
		notify-send -t 500 "Clipboardüìã" "<b><i>'$file'</i></b> copied" ;;
	"P")
		readlink -f "$file" | tr -d '\n' | xclip -selection clipboard &&
		notify-send "$(readlink -f "$file") copied to clipboardüìã" ;;
	"C")	# Copy
		[ -z "$dirs" ] && dirs="$(echo "$dirlist" | dmenu -l 5 -i -p "Copy file(s) to where?"  | sed "s|~|$HOME|g")"
		[ -z "$dirs" ] && exit
		[ ! -d "$dirs" ] && notify-send "$dirs is not a directory, cancelled." && exit
		cp "$file" "$dirs" && notify-send -i "$dirs/$(noextname -f "$file")" "üöö File copied" "$(noextname "$file") moved to $(echo "$dirs" | sed "s|$HOME|~|g")" &
		xdotool key control+R	# reload sxiv
		;;

        "v")	# Move an img
		[ -z "$dirs" ] && dirs="$(echo "$dirlist" | dmenu -l 5 -i -p "Move file(s) to where?"  | sed "s|~|$HOME|g")"
		[ -z "$dirs" ] && exit
		[ ! -d "$dirs" ] && notify-send "$dirs is not a directory, cancelled." && exit
		mv "$file" "$dirs" && notify-send -i "$dirs/$(noextname -f "$file")" "üöö File moved" "$(noextname "$file") moved to $(echo "$dirs" | sed "s|$HOME|~|g")" &
		xdotool key control+R	# reload sxiv
		;;
        esac
done
